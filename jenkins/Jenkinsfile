pipeline {
    agent any

    environment {
        EC2_USER = 'ubuntu'                  // EC2 SSH user
        EC2_HOST = '3.111.37.156'           // Your EC2 public IP
        SSH_CREDENTIAL = 'ec2-ssh-key'      // Jenkins SSH credential ID
        APP_DIR = '/home/ubuntu/app'        // Directory on EC2 to deploy
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/RitikAg2710/simple-java-maven-app.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshagent([env.SSH_CREDENTIAL]) {
                    sh """
                    ssh -o StrictHostKeyChecking=no ${EC2_USER}@${EC2_HOST} 'mkdir -p ${APP_DIR}'
                    scp -o StrictHostKeyChecking=no target/*.jar ${EC2_USER}@${EC2_HOST}:${APP_DIR}/app.jar
                    ssh -o StrictHostKeyChecking=no ${EC2_USER}@${EC2_HOST} 'pkill -f app.jar || true'
                    ssh -o StrictHostKeyChecking=no ${EC2_USER}@${EC2_HOST} 'nohup java -jar ${APP_DIR}/app.jar > ${APP_DIR}/app.log 2>&1 &'
                    """
                }
            }
        }
    }

    post {
        success {
            echo '✅ Deployment Successful!'
        }
        failure {
            echo '❌ Deployment Failed!'
        }
    }
}
